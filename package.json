    "@types/classnames": "2.3.4",
    "@upstash/redis": "1.34.4",
    "auth0": "4.18.0",
    "axios": "1.8.2",
    "canvas": "3.1.0",
    "chart.js": "4.4.7",
    "class-variance-authority": "0.7.1",
