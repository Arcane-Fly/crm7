    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "3.4.17",
    "typescript": "5.3.3",
    "typescript-eslint": "8.24.0",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "1.6.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "typescript"
      ]
    },
    "overrides": {
      "@opentelemetry/api": "1.9.0",
      "@types/node": "22.13.1"
    },
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@sentry/cli",
      "@swc/core",
      "canvas",
      "esbuild",
      "puppeteer",
      "sharp"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
